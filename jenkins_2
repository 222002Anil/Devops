pipeline {
    agent any

    stages {
        stage('Welcome') {
            steps {
                echo 'Welcome to the pipeline'
            }
        }

        stage('Parallel Stage') {
            steps {
                sh 'echo "hi"'
            }
            parallel {
                'child stage' : {
                    steps {
                        sh 'echo "bye"'
                    }
                } // Add more parallel stages if needed
            }
        }

        stage('first one') {
            steps {
                sh 'echo "hello its successfully running"'
            }
        }

        stage('second one') {
            steps {
                sh 'echo "hello it is also running successfully"'
            }
        }

        stage('third one') {
            steps {
                sh 'echo "thank you"'
            }
        }
    }
}
